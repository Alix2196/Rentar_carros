@model ReservasViewModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Reserva</h1>
<div>
    <form class="container-fluid" asp-controller="Reservas" asp-action="Crear" method="post" >
        <div class="container-fluid">
            <div class="row py-3">
                <div>
                    <label for="basic-url" class="form-label">Tipo de vehiculo</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        @foreach (var TipoVehiculo in Model.ListaTipoVehiculos)
                        {
                            <option value="@TipoVehiculo">@TipoVehiculo</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="basic-url" class="form-label">vehiculo</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
                <div>
                    <label for="basic-url" class="form-label">Color</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                        <option value="4">Three</option>
                    </select>
                </div>


            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success me-3" asp-controller="Reservas" asp-action="Pago">Pagar</button>
            <button asp-controller="Reservas" asp-action="Index" class="btn btn-danger">Cancelar</button>
        </div>
    </form>
</div>
